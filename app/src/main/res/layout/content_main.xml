<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:id="@+id/linear_title">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titleDice1"
            android:text="Dice 1"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titleDice2"
            android:text="Dice 2"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titleDice3"
            android:text="Dice 3"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titleDice4"
            android:text="Dice 4"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_title"
        android:id="@+id/linear_number">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number1"
            android:text="1"
            android:visibility="visible"
            android:textSize="75sp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number2"
            android:text="0"
            android:visibility="gone"
            android:textSize="75sp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number3"
            android:text="0"
            android:visibility="gone"
            android:textSize="75sp"
            android:gravity="center"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_number4"
            android:text="0"
            android:visibility="gone"
            android:textSize="75sp"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_roll"
        android:layout_below="@+id/linear_number"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:text="Roll"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="Result:"
        android:layout_below="@id/btn_roll"
        android:layout_marginTop="75dp"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_result"
        tools:text="Result"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="15dp"
        android:textSize="55sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>